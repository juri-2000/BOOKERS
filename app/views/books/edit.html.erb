<style>
div{
 margin:0px 0px 10px;
}

h1{
 color:#333;
 margin-bottom:17.47px;
}

.error{
    border:1px solid #333;
    width:450px;
    background-color: #f0f0f0;
}

.error-content{
    background-color: red;
}

.error-content2{
    margin:33px;
    padding:0px 0px 0px 40px;
}

ul{
    display:block;
}
</style>
<body>
　<h1>Editing Book</h1>

   <% if @book.errors.any? %>
 　　　<div class="error">
   　　　　<div class="error-content">
    　　　　　<p style="color: white;">2 errors prohibited this book from being saved:</p>
   　　　　</div>
   　　　　<div class="error-content2">
    　　　　　<ul>
      　　　　<% @book.errors.full_messages.each do |message| %>
        　　　<li><%= message %></li>
     　　　　　<% end %>
    　　　　　</ul>
   　　　　</div>
 　　　</div>
   <% end %>

   <%= form_with model:@book,local:true do |f| %>
    <div>
      <p> Title</p>
        <%= f.text_field :title %>
    </div>
    <div>
      <p>Body:</p>
        <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit'Update Book' %>
    </div>
      <p><%= link_to "show",book_path(@book) %>|<%=link_to "back",books_path %></p>
   <% end %>
</body>

